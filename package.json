{
  "name": "hanabi-challenges",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint -- --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "logs:backend": "tail -n 200 var/logs/backend.log || echo 'No backend log file yet.'",
    "logs:backend:follow": "tail -n 50 -f var/logs/backend.log",
    "logs:clean": "rm -f var/logs/backend.log && echo 'Cleared var/logs/backend.log'",
    "dev:env": "bash ./infra/dev/start-dev-env.sh",
    "dev:servers": "npm-run-all --parallel dev:backend dev:frontend",
    "dev": "npm run dev:env && npm run dev:servers",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "npm-run-all test:backend test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "prod:start:node": "bash ./infra/prod/start-node.sh",
    "prod:start:docker": "bash ./infra/prod/deploy-compose.sh"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "typescript": "^5.0.0"
  }
}
